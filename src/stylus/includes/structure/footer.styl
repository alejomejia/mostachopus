footer

  width auto
  padding $gutter-tb-m
  background $secondary-color

  .logo

    width 120px
    height 120px
    margin 0 auto 2em auto

    img

      width 120px
      height 120px

  .footer-links

    width 40%
    margin 0 auto

    @media $laptop
      width 50%
    @media $tablet
      width 60%
    @media $phone
      width 65%

    li

      float left
      display block
      text-align center
      width 33.3%

      @media $phone

        width 100%
        float none

      &:first-child

        text-align right

        @media $phone
          text-align center

      &:last-child

        text-align left

        @media $phone
          text-align center

      &:nth-child(even):before,
      &:nth-child(even):after

        content ' x '
        font-family $sans
        color $secondary-color-light
        margin $gutter-lr-s

        @media $phone

          display block
          float none
