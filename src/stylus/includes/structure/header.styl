header

  width auto
  height 100%
  overflow hidden
  position relative
  background rgba($gray-base, .6)

  &::before

    z-index -1
    width 100%
    height 100%
    background url($imgPath+'structure/intro-1.jpg') center no-repeat
    background-size cover
    position absolute


  .logo

    width 200px
    height 200px
    margin 8em auto 2em auto

    img

      width 200px
      height 200px

  .main-title

    color $white
    margin-bottom .2em

  .sub-main-title

    color $gray-lighter
    text-transform lowercase
    font-family $mono
    font-weight normal
    font-size 1.5em

    @media $laptop
      font-size 1.3em
    @media $tablet
      font-size 1.1em
    @media $phone
      font-size .9em
