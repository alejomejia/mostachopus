header

  width auto
  height 100%
  overflow hidden
  position relative
  background linear-gradient(to bottom right, rgba($primary-color, .6), rgba($secondary-color))

  &::before

    z-index -1
    width 100%
    height 100%
    position absolute

  &.index::before
    background url($imgPath+'structure/intro.jpg') center no-repeat
    background-size cover
    filter blur(3px)

  .logo

    width 200px
    height 200px
    margin 10em auto 2em auto

    img

      width 200px
      height 200px

  .main-title

    color $white

  .sub-main-title

    color $gray-lighter
    text-transform lowercase
    font-family $mono
    font-weight normal
    font-size 1.5em

    @media $laptop
      font-size 1.3em
    @media $tablet
      font-size 1.1em
    @media $phone
      font-size .9em
