/* General */

*,
*::after,
*::before

  box-sizing border-box

*::after,
*::before
  content ''

html,
body

  height 100%

body

  font-size 16px
  font-family $serif
  color $gray
  background $gray-lighter

/* Headings */

h1,
h2,
h3,
h4,
h5,
h6

  font-family $sans
  font-weight bold
  text-transform uppercase
  margin 0
  padding 0

h1

  font-size 2.5em

  @media $laptop
    font-size 2.5em
  @media $tablet
    font-size 2.2em
  @media $phone
    font-size 1.9em

h2

  font-size 2em

  @media $laptop
    font-size 2em
  @media $tablet
    font-size 1.7em
  @media $phone
    font-size 1.4em

h3

  font-size 1.8em

  @media $laptop
    font-size 1.8em
  @media $tablet
    font-size 1.5em
  @media $phone
    font-size 1.2em

.heading

  padding-bottom $gutter-l

  h2

    margin .1em 0

  h3

    font-family $serif
    font-size 1em
    color $gray-text
    text-transform lowercase
    font-weight normal
    display inline-block

    @media $phone

      display none

/* Paragraphs */

p

  font-size 1em
  line-height 1.5em
  padding 0
  margin 0
  color $gray-text

/* Lists */

ul

  list-style-type none
  margin 0
  padding 0

/* Anchors */

a

  color $primary-color-dark
  transition .3s ease-in

  &:hover

    color $primary-color-light

a,
a:hover,
a:link,
a:visited,
a:active

  outline none
  text-decoration none

*:focus

  outline none

/* Sections */

section

  padding $gutter-tb-l
