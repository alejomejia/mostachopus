*,
*::after,
*::before

  box-sizing border-box

*::after,
*::before
  content ''

html,
body

  height 100%

body

  font-size 16px
  font-family $merriweather
  color $gray
  background $white

h1,
h2,
h3,
h4,
h5,
h6

  font-family $montserrat
  font-weight bold
  text-transform uppercase
  margin 0
  padding 0

p

  padding 0
  margin 0

ul

  list-style-type none

a

  color $primary-color

a,
a:hover

  text-decoration none
